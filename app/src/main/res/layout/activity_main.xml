<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wipro.bootcamp.dogage.MainActivity"
    android:orientation="vertical">

    <TextView android:text="@string/breed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/breedLabeTextView" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/breedSpinner"
        android:spinnerMode="dropdown"
        android:entries="@array/breed_array_label"/>

    <TextView android:text="@string/age_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ageLabeTextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Year"
            android:layout_weight="1"
            android:id="@+id/ageYearText" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Month"
            android:layout_weight="1"
            android:id="@+id/ageMonthText" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_label"
        android:id="@+id/submitButton" />

</LinearLayout>
